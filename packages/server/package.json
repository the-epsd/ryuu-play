{
  "name": "@ptcg/server",
  "version": "0.1.0",
  "description": "Server of the ptcg game.",
  "main": "./dist/cjs/index.js",
  "types": "./dist/cjs/index.d.ts",
  "exports": {
    "require": {
      "types": "./dist/cjs/index.d.ts",
      "default": "./dist/cjs/index.js"
    },
    "import": {
      "types": "./dist/esm/index.d.ts",
      "default": "./dist/esm/index.js"
    }
  },
  "scripts": {
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "compile": "tsc && tsc -p tsconfig.esm.json",
    "build": "npm run lint && npm run test && npm run compile",
    "start": "node start.js",
    "start:dev": "nodemon -e ts --exec \"tsc && npm run start\"",
    "test": "nyc -e \".ts\" -x \"src/**/*.spec.ts\" jasmine-ts \"src/**/*.spec.ts\"",
    "coverage": "npm test && nyc report -r html"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ptcg/common": "*",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "jimp": "^0.16.1",
    "mysql2": "^3.7.0",
    "nodemailer": "^6.6.5",
    "reflect-metadata": "^0.2.2",
    "socket.io": "^4.8.1",
    "sqlite3": "^5.0.2",
    "typeorm": "^0.3.22"
  },
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/jasmine": "^2.8.17",
    "@types/node": "^18.19.87",
    "@types/nodemailer": "^6.4.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^8.57.0",
    "jasmine": "^3.9.0",
    "jasmine-ts": "~0.4.0",
    "nodemon": "^2.0.13",
    "nyc": "^17.1.0",
    "ts-node": "^10.9.2",
    "typescript": "~4.9.5"
  },
  "nodemonConfig": {
    "ignore": [
      "coverage/*",
      "dist/*",
      "output/*",
      ".nyc_output/*"
    ],
    "delay": "2500",
    "watch": "src"
  }
}
